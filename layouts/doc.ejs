<!--- The main documentation page -->
<%- include("header") %>

  <body data-layout="doc">
    <%- include("page_header", { platform_switcher: true }) %>
    <div class="content">
      <%-include("sidebar", { bar: sidebar, include_summary: true, indexTitle: locals.indexTitle, include_toc: true })%>
      <main class="container">
        <section class="header">
          <h1 class="title" id="title"><%=title%></h1>
        </section>

        <%- content %>

        <% if (typeof includeTemplate !== "undefined") { %>
          <% for (const includes of includeTemplate) {%>
            <%-include(includes)%>
          <% } %>
        <% } %>
      </main>
    </div>
    <%-include("hovercard")%>
  </body>

<%- include("footer") %>
