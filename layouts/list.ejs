

<ul class="list">
  <% for (const node of blocks) { %>
    <li class="list-item">
      <div class="list-item__inner">
        <div class="list-item__icon"></div>
        <h3 class="list-item__name">
          <a href="<%= node.link %>"><%= node.text %></a>
        </h3>
        <div class="list-item__summary"><%- node.summary %></div>
      </div>
    </li>
  <% } %>
</ul>
